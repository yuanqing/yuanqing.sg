{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "yarn run clean-build && build-website --minify && cp CNAME build/CNAME",
    "clean": "rm -rf '*.log' && yarn run clean-build && yarn run clean-stats",
    "clean-build": "rm -rf build",
    "clean-stats": "rm -rf stats.json",
    "fix": "concurrently --raw 'yarn run fix-css' 'yarn run fix-html' 'yarn run fix-ts'",
    "fix-css": "stylelint --fix 'css/**/*.css'",
    "fix-html": "node --loader tsm scripts/sort-html-classes.ts 'templates/**/*.html' && prettier 'templates/**/*.html' --loglevel error --print-width 9999 --write",
    "fix-ts": "eslint --fix 'scripts/**/*.ts'",
    "lint": "concurrently --raw 'yarn run lint-css' 'yarn run lint-ts'",
    "lint-css": "node --loader tsm scripts/check-unused-css.ts 'templates/**/*.html' 'css/**/*.css' && stylelint 'css/**/*.css'",
    "lint-ts": "eslint 'scripts/**/*.ts'",
    "open": "open-cli http://0.0.0.0:4242",
    "postinstall": "simple-git-hooks",
    "reset": "yarn run clean && rm -rf node_modules yarn.lock && yarn install",
    "serve": "mkdir -p build && sirv build --dev --host --port 4242",
    "stats": "yarn run clean-stats && node --loader tsm --require dotenv/config scripts/fetch-stats/fetch-stats.ts stats.json",
    "watch": "yarn run clean-build && build-website --watch"
  },
  "devDependencies": {
    "@octokit/rest": "^18.12.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jsdom": "^16.2.14",
    "@types/node": "^17.0.5",
    "@yuanqing/build-website": "^0.0.1",
    "concurrently": "^6.5.1",
    "dotenv": "^10.0.0",
    "eslint": "^8.6.0",
    "eslint-config-yuanqing": "^0.0.6",
    "fs-extra": "^10.0.0",
    "globby": "^12.0.2",
    "isomorphic-unfetch": "^3.1.0",
    "lint-staged": "^12.1.4",
    "open-cli": "^7.0.1",
    "p-props": "^5.0.0",
    "prettier": "^2.5.1",
    "puppeteer": "^13.0.1",
    "purify-css": "^1.2.5",
    "simple-git-hooks": "^2.7.0",
    "sirv-cli": "^2.0.1",
    "stylelint": "^14.2.0",
    "stylelint-config-yuanqing": "^0.0.3",
    "tsm": "^2.2.1",
    "typescript": "^4.5.4"
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing"
  },
  "lint-staged": {
    "*.css": [
      "stylelint"
    ],
    "*.ts": [
      "eslint"
    ]
  },
  "prettier": "eslint-config-yuanqing/prettier",
  "simple-git-hooks": {
    "pre-commit": "yarn run lint-staged",
    "pre-push": "yarn run lint && yarn run fix && yarn run build"
  },
  "stylelint": {
    "extends": "stylelint-config-yuanqing"
  }
}
