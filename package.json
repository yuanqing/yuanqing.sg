{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run clean-build && build-website --minify && cp CNAME build/CNAME",
    "clean": "rimraf '*.log' && npm run clean-build && npm run clean-stats",
    "clean-build": "rimraf build",
    "clean-stats": "rimraf stats.json",
    "fix": "concurrently --raw 'npm run fix-css' 'npm run fix-html' 'npm run fix-ts'",
    "fix-css": "stylelint --fix 'css/**/*.css'",
    "fix-html": "node --loader tsm scripts/sort-html-classes.ts 'templates/**/*.html' && prettier 'templates/**/*.html' --loglevel error --print-width 9999 --write",
    "fix-ts": "eslint --fix 'scripts/**/*.ts'",
    "lint": "concurrently --raw 'npm run lint-css' 'npm run lint-ts'",
    "lint-css": "node --loader tsm scripts/check-unused-css.ts 'templates/**/*.html' 'css/**/*.css' && stylelint 'css/**/*.css'",
    "lint-ts": "eslint 'scripts/**/*.ts'",
    "open": "open-cli http://0.0.0.0:4242",
    "postinstall": "simple-git-hooks",
    "reset": "npm run clean && rimraf node_modules package-lock.json && npm install",
    "serve": "mkdir -p build && sirv build --dev --host --port 4242",
    "stats": "npm run clean-stats && node --loader tsm --require dotenv/config scripts/fetch-stats/fetch-stats.ts stats.json",
    "watch": "npm run clean-build && build-website --watch"
  },
  "devDependencies": {
    "@octokit/rest": "^18.12.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jsdom": "^16.2.14",
    "@types/node": "^17.0.43",
    "@yuanqing/build-website": "^0.0.2",
    "concurrently": "^7.2.2",
    "dotenv": "^16.0.1",
    "eslint": "^8.17.0",
    "eslint-config-yuanqing": "^0.0.6",
    "fs-extra": "^10.1.0",
    "globby": "^13.1.2",
    "isomorphic-unfetch": "^3.1.0",
    "lint-staged": "^13.0.1",
    "open-cli": "^7.0.1",
    "p-props": "^5.0.0",
    "prettier": "^2.7.0",
    "puppeteer": "^14.4.0",
    "purify-css": "^1.2.5",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0",
    "sirv-cli": "^2.0.2",
    "stylelint": "^14.9.1",
    "stylelint-config-yuanqing": "^0.0.3",
    "tsm": "^2.2.1",
    "typescript": "^4.7.3"
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing"
  },
  "lint-staged": {
    "*.css": [
      "stylelint"
    ],
    "*.ts": [
      "eslint"
    ]
  },
  "prettier": "eslint-config-yuanqing/prettier",
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run lint && npm run fix && npm run build"
  },
  "stylelint": {
    "extends": "stylelint-config-yuanqing"
  }
}
