{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run clean-build && build-website --minify && cp CNAME build/CNAME",
    "bump-dependencies": "npm-check-updates --upgrade",
    "clean": "rimraf '*.log' && npm run clean-build",
    "clean-build": "rimraf build",
    "fix": "npm run fix-css && npm run fix-html && npm run fix-ts",
    "fix-css": "stylelint --fix 'css/**/*.css'",
    "fix-html": "tsx scripts/sort-html-classes.ts 'templates/**/*.html' && prettier 'templates/**/*.html' --loglevel error --print-width 9999 --write",
    "fix-ts": "eslint --fix 'scripts/**/*.ts'",
    "lint": "npm run lint-css && npm run lint-ts",
    "lint-css": "tsx scripts/check-unused-css.ts 'templates/**/*.html' 'css/**/*.css' && stylelint 'css/**/*.css'",
    "lint-ts": "eslint 'scripts/**/*.ts'",
    "open": "open-cli http://0.0.0.0:4242",
    "postinstall": "simple-git-hooks",
    "reset": "npm run clean && rimraf node_modules package-lock.json && npm install",
    "serve": "mkdir -p build && sirv build --dev --host --port 4242",
    "watch": "npm run clean-build && build-website --watch"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@yuanqing/build-website": "^0.0.3",
    "eslint": "^8.27.0",
    "eslint-config-yuanqing": "^0.0.6",
    "globby": "^13.1.2",
    "lint-staged": "^13.0.3",
    "open-cli": "^7.1.0",
    "prettier": "^2.7.1",
    "purify-css": "^1.2.5",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.1",
    "sirv-cli": "^2.0.2",
    "stylelint": "^14.14.1",
    "stylelint-config-yuanqing": "^0.0.3",
    "tsx": "^3.11.0",
    "typescript": "^4.8.4"
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing"
  },
  "lint-staged": {
    "*.css": [
      "stylelint"
    ],
    "*.ts": [
      "eslint"
    ]
  },
  "prettier": "eslint-config-yuanqing/prettier",
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run lint && npm run fix && npm run build"
  },
  "stylelint": {
    "extends": "stylelint-config-yuanqing"
  }
}
